{
  "name": "lddl",
  "version": "0.1.1",
  "description": "Local-first CLI to log technical decisions directly in your git workflow",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "lddl": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.cli.json",
    "postbuild": "chmod +x dist/cli/index.js",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/cli/index.js"
  },
  "keywords": [
    "decision-log",
    "adr",
    "architecture-decision-records",
    "technical-decisions",
    "git-hooks",
    "cli",
    "developer-tools",
    "documentation"
  ],
  "author": "Cassio Freitas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cassiorsfreitas/lddl.git"
  },
  "homepage": "https://github.com/cassiorsfreitas/lddl#readme",
  "bugs": {
    "url": "https://github.com/cassiorsfreitas/lddl/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}